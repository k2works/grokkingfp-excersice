{
  "name": "Grokking FP - Multi-Language Dev Container",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": "true",
      "moby": "true"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": "false"
    }
  },

  "forwardPorts": [
    8000,
    4000,
    3000,
    5000
  ],

  "postCreateCommand": "echo '=== Dev Container Ready ===' && echo 'Supported languages: Scala, Java, F#, C#, Haskell, Clojure, Elixir, Rust, Python, TypeScript, Ruby'",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true
      },
      "extensions": [
        "scala-lang.scala",
        "scalameta.metals",
        "redhat.java",
        "vscjava.vscode-java-pack",
        "vscjava.vscode-gradle",
        "ionide.ionide-fsharp",
        "ms-dotnettools.csharp",
        "ms-dotnettools.vscode-dotnet-runtime",
        "haskell.haskell",
        "justusadam.language-haskell",
        "betterthantomorrow.calva",
        "jakebecker.elixir-ls",
        "rust-lang.rust-analyzer",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "rebornix.ruby",
        "shopify.ruby-lsp",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "yzhang.markdown-all-in-one",
        "bierner.markdown-mermaid",
        "jebbs.plantuml",
        "editorconfig.editorconfig",
        "eamodio.gitlens"
      ]
    },
    "jetbrains": {
      "backend": "IntelliJ"
    }
  },

  "mounts": [
    "source=${localWorkspaceFolder},target=/srv,type=bind,consistency=cached"
  ],

  "workspaceFolder": "/srv",

  "remoteUser": "developer"
}
